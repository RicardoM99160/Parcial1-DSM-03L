                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descuentos aplicados" android:paddingTop="16sp"/>

            <TextView
                android:id="@+id/textDescuentosEmpleado1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="- 0.00 ISSS, -0.00 Renta, -0.00 AFP"
                android:textAlignment="viewStart"
                android:textColor="#070707" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sueldo Liquido" android:paddingTop="16sp"/>

            <TextView
                android:id="@+id/textLiquidoEmpleado1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="$0.00 "
                android:textAlignment="viewStart"
                android:textColor="#070707" />

